<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to my <%= title %></p>
    <a href="/new"><button>Add a Message</button></a>
    <ul>
      <% messages.forEach( function(message){ %>
        <li>
          <%= message.text%>
          <span><%= message.user %></span>
          <span><%= message.added %></span>
        </li>

      <% }); %>
    </ul>
  </body>
</html>
